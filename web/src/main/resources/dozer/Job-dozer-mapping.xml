<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<mapping type="bi-directional" wildcard="false">
		<class-a>com.zebrunner.reporting.domain.dto.JobDTO</class-a>
		<class-b>com.zebrunner.reporting.domain.db.Job</class-b>

		<field>
			<a>id</a>
			<b>id</b>
		</field>
		<field>
			<a>name</a>
			<b>name</b>
		</field>
		<field>
			<a>jobURL</a>
			<b>jobURL</b>
		</field>
		<field>
			<a>jenkinsHost</a>
			<b>jenkinsHost</b>
		</field>
		<field>
			<a>userId</a>
			<b>user.id</b>
		</field>
        <field>
            <a>automationServerId</a>
            <b>automationServerId</b>
        </field>
	</mapping>

	<mapping type="bi-directional" wildcard="false">
		<class-a>com.zebrunner.reporting.domain.dto.ViewType</class-a>
		<class-b>com.zebrunner.reporting.domain.db.View</class-b>

		<field>
			<a>id</a>
			<b>id</b>
		</field>
		<field>
			<a>name</a>
			<b>name</b>
		</field>
		<field>
			<a>projectId</a>
			<b>project.id</b>
		</field>
	</mapping>

	<mapping type="bi-directional" wildcard="false">
		<class-a>com.zebrunner.reporting.domain.dto.JobViewDTO</class-a>
		<class-b>com.zebrunner.reporting.domain.db.JobView</class-b>

		<field>
			<a>id</a>
			<b>id</b>
		</field>
		<field>
			<a>viewId</a>
			<b>viewId</b>
		</field>
		<field>
			<a>env</a>
			<b>env</b>
		</field>
		<field>
			<a>position</a>
			<b>position</b>
		</field>
		<field>
			<a>size</a>
			<b>size</b>
		</field>
		<field>
			<a>job</a>
			<b>job</b>
		</field>
	</mapping>
</mappings>
